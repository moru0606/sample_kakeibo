<% @page_title = '固定費用科目一覧'%>
<h2><%= @page_title %></h2>
<% link_to '固定費用の新規登録', :new_fixdcost %>
<% if @fixdcosts.present? %>
<table>
    <thead>
        <tr>
            <th>科目名</th>
            <th>備考</th>
            <th>操作</th>
        </tr>
    </thead>

    <tbody>
        <% @fixdcosts.each do |fixdcost| %>
          <tr>
              <td><%= fixdcost.name %></td>
              <td><%= fixdcost.description%></td>
              <td>
              <%= link_to '編集', [:edit,fixdcost] %>
              <%= link_to '削除', fixdcost, method: :delete,data: { confirm: '本当に削除しますか？'} %>
              </td>
          </tr>
        <% end %>
    </tbody>
</table>
<% else %>
    <p>登録されている固定費用科目がありません</p>
<% end %>